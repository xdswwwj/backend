{
  "compilerOptions": {
    "module": "commonjs", // CommonJS 모듈 사용 (Node.js 기본값)
    "declaration": true, // .d.ts 타입 선언 파일 생성
    "removeComments": true, // 빌드된 JS 파일에서 주석 제거
    "emitDecoratorMetadata": true, // 데코레이터 메타데이터 사용
    "experimentalDecorators": true, // 데코레이터 문법 사용
    "allowSyntheticDefaultImports": true, // ES6의 기본 import 호환
    "esModuleInterop": true, // CommonJS와 ES 모듈 간의 호환성 추가
    "target": "es2021", // JavaScript 빌드 타겟 (ES2021)
    "moduleResolution": "node", // Node.js 모듈 해석 방식
    "sourceMap": true, // 디버깅을 위한 소스 맵 생성
    "outDir": "./dist", // 컴파일 결과물이 저장될 디렉토리
    "baseUrl": "./", // 상대 경로의 기준 디렉토리
    "incremental": true, // 빌드 속도 향상을 위한 증분 빌드 활성화
    "skipLibCheck": true, // 외부 라이브러리 타입 검사 생략
    "forceConsistentCasingInFileNames": true, // 파일명 대소문자 강제 일치
    "noUnusedLocals": true, // 사용되지 않는 로컬 변수를 오류로 처리
    "noUnusedParameters": true, // 사용되지 않는 파라미터를 오류로 처리
    "noImplicitReturns": true, // 함수에서 모든 경로가 값을 반환하지 않으면 오류 처리
    "resolveJsonModule": true, // JSON 파일 import 지원
    "typeRoots": ["./node_modules/@types"], // 타입 선언 디렉토리
    "strictNullChecks": true // Null 및 Undefined의 엄격한 검사
  },
  "include": ["src/**/*", "prisma"], // 포함할 파일 경로
  "exclude": ["node_modules", "dist"] // 제외할 파일 경로
}
